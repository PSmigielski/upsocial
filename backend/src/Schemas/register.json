{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "maxLength": 128,
            "format": "email"
        },
        "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 254
        },
        "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 196
        },
        "name": {
            "type": "string",
            "maxLength": 100
        },
        "surname": {
            "type": "string",
            "maxLength": 100
        },
        "birthday": {
            "type": "string",
            "minLength": 10,
            "maxLength": 10
        },
        "gender": {
            "enum": ["male", "female"]
        }
    },
    "required": [
        "email",
        "username",
        "password",
        "name",
        "surname",
        "birthday",
        "gender"
    ],
    "additionalProperties": false
}
